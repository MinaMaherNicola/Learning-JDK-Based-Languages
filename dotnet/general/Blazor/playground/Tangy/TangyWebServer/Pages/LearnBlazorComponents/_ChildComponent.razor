@inject IJSRuntime jsRuntime

<div>
    <div class="alert alert-info">@Title</div>
    @if (ChildContent is not null)
    {
        <div class="alert alert-success">@ChildContent</div>
    }
    @if (DangerChildContent is not null)
    {
        <div class="alert alert-danger">@DangerChildContent</div>
    }
    <button class="btn btn-danger" @onclick="OnButtonClickMethod">Click Me!</button>
    
    <_GrandChildComponent />
</div>

@code {
    [Parameter]
    public string Title { get; set; } = null!;
    [Parameter]
    public RenderFragment ChildContent { get; set; }
    [Parameter]
    public RenderFragment DangerChildContent { get; set; }
    [Parameter]
    public EventCallback OnButtonClickMethod { get; set; }

    public async Task ToastrSuccess()
    {
        await jsRuntime.ToastrSuccess("Operation Successful");
    }
}
